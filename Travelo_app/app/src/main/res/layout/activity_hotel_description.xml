<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_background"
    tools:context=".HotelDescriptionActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/Slider_Image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/slider_background4"
                app:auto_cycle="true"
                app:corner_radius="5"
                app:delay="0"
                app:period="1000"

                ></com.denzcoskun.imageslider.ImageSlider>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Hotel Name"
                    android:textSize="25dp"
                    android:textColor="@color/brown"></TextView>


                <TextView
                    android:id="@+id/Rate"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:text="Rate Stars"
                    android:textSize="25dp"
                    android:textColor="@color/brown"></TextView>
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_baseline_star_24"
                    />
                <Button
                    android:id="@+id/Whishlist_btn"
                    android:background="@drawable/ic_baseline_favorite_black_24"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="end">

                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/information_btn"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:background="@color/brown"
                    android:textColor="@color/logo_background"
                    android:drawableTop="@drawable/ic_baseline_description_24"
                    android:padding="10dp"
                    android:text="Information"/>

                <Button
                    android:id="@+id/location_btn"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:background="@color/brown"
                    android:textColor="@color/logo_background"
                    android:drawableTop="@drawable/ic_baseline_location_on_24"
                    android:padding="10dp"
                    android:text="Location"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="10dp"
                    android:text="Information"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Offering exclusive seafront accommodations, Kempinski Hotel overlooks one of Soma Bayâ€™s finest beaches. It features several swimming pools set within lagoons, a lazy river, a fitness center and a spa with hot tub, sauna and massage facilities.
"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/wifi_facility"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/bold"
                    android:drawableLeft="@drawable/wifi"
                    android:padding="4dp"
                    android:text="Wifi"
                    android:textColor="@color/logo_background"
                    android:backgroundTint="@color/brown"
                    android:textSize="27dp">

                </TextView>

                <TextView
                    android:id="@+id/pool_facility"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bold"
                    android:drawableLeft="@drawable/ic_baseline_pool_24"
                    android:padding="4dp"
                    android:text="Pool"
                    android:textColor="@color/logo_background"
                    android:backgroundTint="@color/brown"
                    android:textSize="27dp">

                </TextView>

                <TextView
                    android:id="@+id/pet_facility"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bold"
                    android:drawableLeft="@drawable/ic_no_pets"
                    android:padding="4dp"
                    android:text="Pets"
                    android:textColor="@color/logo_background"
                    android:backgroundTint="@color/brown"
                    android:textSize="27dp">

                </TextView>

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/brown"
                android:text="Reserve"
                android:id="@+id/Reserve_btn"
                android:textColor="@color/logo_background"
                android:textSize="20dp"
                android:layout_alignParentBottom="true">

            </Button>




        </LinearLayout>

    </RelativeLayout>

</ScrollView>


